<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_medicamento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.edu.iff.pooa20162.ajude.MedicamentoActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/medicamentos"
        android:id="@+id/tMedicamentos"
        android:textStyle="bold"
        android:textColor="#1b5000"
        android:gravity="center"
        android:textSize="25dp"
        android:focusableInTouchMode="true"
        android:focusable="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tMedicamentos"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <Button
            android:text="Novo +"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:id="@+id/bMedicamentoNovo"
            android:background="@drawable/botao"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:text="Detalhar"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:id="@+id/bMedicamentoDetalhar"
            android:background="@drawable/botao"
            android:textSize="17dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:text="Excluir"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:id="@+id/bMedicamentoExcluir"
            android:background="@drawable/botao"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:choiceMode="singleChoice"
        android:id="@+id/lvMedicamentos" />
</RelativeLayout>
